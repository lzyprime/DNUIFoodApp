<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".RegisterActivity">

    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/et_usrname"
            app:layout_constraintTop_toBottomOf="@+id/guideline3" app:layout_constraintBottom_toTopOf="@+id/et_passwd"
            app:layout_constraintStart_toStartOf="@+id/et_passwd" app:layout_constraintEnd_toEndOf="@+id/et_passwd"
            android:hint="@string/hint_usrname"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/et_passwd"
            android:hint="@string/hint_passwd"
            app:layout_constraintTop_toBottomOf="@+id/et_usrname"
            app:layout_constraintBottom_toTopOf="@+id/et_phone" app:layout_constraintStart_toStartOf="@+id/et_phone"
            app:layout_constraintEnd_toEndOf="@+id/et_phone"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="phone"
            android:ems="10"
            android:id="@+id/et_phone"
            android:hint="@string/hint_phone"
            app:layout_constraintTop_toBottomOf="@+id/et_passwd"
            app:layout_constraintBottom_toTopOf="@+id/et_addr" app:layout_constraintStart_toStartOf="@+id/et_addr"
            app:layout_constraintEnd_toEndOf="@+id/et_addr"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textMultiLine"
            android:ems="10"
            android:id="@+id/et_addr"
            android:hint="@string/hint_address"
            app:layout_constraintTop_toBottomOf="@+id/et_phone"
            app:layout_constraintBottom_toTopOf="@+id/et_comment" app:layout_constraintStart_toStartOf="@+id/et_comment"
            app:layout_constraintEnd_toEndOf="@+id/et_comment"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/et_comment"
            android:hint="@string/hint_comment"
            app:layout_constraintTop_toBottomOf="@+id/et_addr"
            app:layout_constraintBottom_toTopOf="@+id/guideline4" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"/>
    <android.support.constraint.Guideline android:layout_width="wrap_content" android:layout_height="wrap_content"
                                          android:id="@+id/guideline3" app:layout_constraintGuide_begin="45dp"
                                          android:orientation="horizontal"/>
    <android.support.constraint.Guideline android:layout_width="wrap_content" android:layout_height="wrap_content"
                                          android:id="@+id/guideline4" app:layout_constraintGuide_begin="403dp"
                                          android:orientation="horizontal"/>
    <Button
            android:text="注册"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/bt_register" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="@+id/guideline4" app:layout_constraintStart_toStartOf="@+id/et_comment"
            app:layout_constraintEnd_toEndOf="@+id/et_comment"/>
</android.support.constraint.ConstraintLayout>