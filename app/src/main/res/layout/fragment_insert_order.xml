<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context=".Fragments.InsertOrderFragment">

    <!-- TODO: Update blank fragment layout -->

    <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="220dp">

        <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/rb_decnum"
                app:layout_constraintStart_toStartOf="parent"
                android:button="@drawable/ic_dec" android:layout_marginStart="8dp"
                app:layout_constraintTop_toBottomOf="@+id/tv_title" android:layout_marginTop="32dp"/>
        <TextView
                android:text="num "
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_num"
                app:layout_constraintBottom_toBottomOf="@+id/rb_decnum"
                app:layout_constraintTop_toTopOf="@+id/rb_decnum" app:layout_constraintStart_toEndOf="@+id/rb_decnum"
                android:layout_marginStart="8dp"/>
        <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/rb_addnum"
                app:layout_constraintTop_toTopOf="@+id/rb_decnum"
                app:layout_constraintBottom_toBottomOf="@+id/rb_decnum" android:layout_marginStart="8dp"
                app:layout_constraintStart_toEndOf="@+id/tv_num" android:button="@drawable/ic_insertorder"/>
        <TextView
                android:text="sum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_sum" android:layout_marginStart="32dp"
                app:layout_constraintStart_toEndOf="@+id/rb_addnum"
                app:layout_constraintTop_toTopOf="@+id/tv_num"
                app:layout_constraintBottom_toBottomOf="@+id/tv_num"/>
        <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="textPostalAddress"
                android:ems="10"
                android:id="@+id/et_addr"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
                android:layout_marginTop="16dp" app:layout_constraintTop_toBottomOf="@+id/rb_decnum" android:hint="地址"
                app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="161dp"/>
        <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/rb_ok" android:layout_marginEnd="16dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/rb_cancel"
                app:layout_constraintBottom_toBottomOf="@+id/rb_cancel"
                android:button="@android:color/background_light" android:text="确认"
                android:textColor="@color/colorAccent"/>
        <RadioButton
                android:text="取消"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/rb_cancel" app:layout_constraintEnd_toStartOf="@+id/rb_ok"
                android:layout_marginEnd="32dp" android:layout_marginTop="25dp"
                app:layout_constraintTop_toBottomOf="@+id/et_addr" android:button="@android:color/background_light"/>
        <TextView
                android:text="确认订单"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_title"
                app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="32dp" android:layout_marginTop="8dp"
                android:textColor="@color/colorAccent"/>
    </android.support.constraint.ConstraintLayout>
</FrameLayout>