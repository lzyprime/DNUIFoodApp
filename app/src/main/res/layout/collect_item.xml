<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
                                             android:layout_height="match_parent">

    <ImageView
            android:layout_width="354dp"
            android:layout_height="80dp" app:srcCompat="@mipmap/ic_launcher"
            android:id="@+id/iv_collect"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="16dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="16dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="16dp"/>
    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_collectshopname"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/iv_collect" app:layout_constraintStart_toStartOf="@+id/iv_collect"
            app:layout_constraintEnd_toEndOf="@+id/iv_collect"/>
    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_collectaddr"
            app:layout_constraintStart_toStartOf="@+id/iv_collect"
            app:layout_constraintEnd_toEndOf="@+id/iv_collect" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/tv_collectshopname"/>
    <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/tv_collectprice"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/tv_collectaddr"
            app:layout_constraintStart_toStartOf="@+id/iv_collect" app:layout_constraintEnd_toEndOf="@+id/iv_collect"
            android:textAlignment="center"/>
</android.support.constraint.ConstraintLayout>