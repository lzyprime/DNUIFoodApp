<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent"
>

    <ImageView
            android:layout_width="95dp"
            android:layout_height="90dp" app:srcCompat="@android:color/transparent"
            android:id="@+id/iv_shopimage" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp"/>
    <TextView
            android:text="shopname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_shopname" android:layout_marginStart="32dp"
            app:layout_constraintStart_toEndOf="@+id/iv_shopimage" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="16dp"/>
    <RatingBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/rb_shoplevel"
            style="@android:style/Widget.DeviceDefault.Light.RatingBar.Small" android:numStars="5"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="16dp" android:rating="3.5"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="64dp"/>
    <TextView
            android:text="店铺地址"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_shopaddr" android:layout_marginStart="32dp"
            app:layout_constraintStart_toEndOf="@+id/iv_shopimage" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/tv_shopname"/>
    <TextView
            android:text="店铺电话"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_shophone" android:layout_marginStart="32dp"
            app:layout_constraintStart_toEndOf="@+id/tv_shopaddr" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/tv_shopname"/>
    <TextView
            android:text="店铺简介"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_shopintro" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/tv_shopaddr" android:layout_marginStart="32dp"
            app:layout_constraintStart_toEndOf="@+id/iv_shopimage"/>
    <TextView
            android:text="备注"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_shopcomment" android:layout_marginStart="32dp"
            app:layout_constraintStart_toEndOf="@+id/tv_shophone" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/rb_shoplevel"/>
</android.support.constraint.ConstraintLayout>